<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/contact_cell">

    <TextView
            android:text="Angel Beats"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/anime_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/anime_num"/>
    <TextView
            android:text="temporada: 1 "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/anime_num" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp"
            app:layout_constraintTop_toBottomOf="@+id/anime_name" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="ano: 2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anime_ano"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/anime_name"
            app:layout_constraintStart_toEndOf="@+id/anime_num" android:layout_marginStart="20dp"
            app:layout_constraintVertical_bias="0.583" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="87dp"
            android:layout_height="88dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/anime_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/anime_name" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>